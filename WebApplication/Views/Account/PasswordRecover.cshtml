
@model BusinessEntity.PasswordBusinessEntity

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="~/favicon.ico">
    <title> .:SIG - TEM | Restablecer contraseña :.</title>

    <!-- Global stylesheets -->
    <link href="~/Content/assets/css/css.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/bootstrap_limitless.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/layout.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/components.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/colors.min.css" rel="stylesheet" type="text/css">

    <!-- /global stylesheets -->
    <!-- Core JS files -->
    <script src="~/Content/global_assets/js/main/jquery.min.js"></script>
    <script src="~/Content/global_assets/js/main/bootstrap.bundle.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/loaders/blockui.min.js"></script>
    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script src="~/Content/global_assets/js/app.js"></script>
    <!-- /theme JS files -->

</head>

<body class="banner">
    <div id="cargando" class="page-loader" style="display:none;">
        <div class="loader"></div>
    </div>
    <!-- Page content -->
    <div class="page-content">

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Content area -->
            <div class="content d-flex justify-content-center align-items-center">
                <!-- HIDDEN FIELDS -->
                <input type="hidden" id="hddn_PasswordRequest" name="hddn_PasswordRequest" value="@Url.Action("JSON_PasswordRecover", "Account", null)" />
                <input type="hidden" id="hddn_Login" name="hddn_Login" value="@Url.Action("Login", "Account", null)" />

                <!-- Password recovery form -->
                <form id="form_recovery" method="post" class="form-validate-recovery">
                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <i class="icon-spinner11 icon-2x text-warning border-warning border-3 rounded-round p-3 mb-3 mt-1"></i>
                                <h5 class="mb-0">¿Has olvidado la contraseña?</h5>
                                <span class="d-block text-muted">Te enviaremos instrucciones por correo electrónico.</span>
                            </div>

                            <div class="form-group form-group-feedback form-group-feedback-right">
                                @Html.TextBoxFor(model => model.recovery_user_email, new { @class = "form-control", @placeholder = "Correo electrónico", @autocomplete = "off", @type = "email" })
                                <div class="form-control-feedback">
                                    <i class="icon-mail5 text-muted"></i>
                                </div>
                            </div>

                        </div>
                        <div class="card-footer bg-white text-center align-items-center">
                            <button type="button" class="btn bg-primary btn-sm" onclick="fnc_Send();"><i class="icon-spinner11 mr-2"></i> Restablecer contraseña</button>
                            <span>o</span>
                            @Html.ActionLink("Iniciar sesión", "Login", "Account", null, new { @class = "btn btn-link px-0" })
                        </div>
                    </div>
                </form>
                <!-- /password recovery form -->

            </div>
            <!-- /content area -->

        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</body>
</html>

<script src="~/Content/global_assets/js/plugins/forms/styling/uniform.min.js"></script>
<script src="~/Content/global_assets/js/plugins/forms/validation/validate.min.js"></script>
<script src="~/Content/global_assets/js/plugins/notifications/sweet_alert.min.js"></script>
<script src="~/Content/global_assets/js/pages/password/recovery.js?v=@ViewContext.Controller.GetType().Assembly.GetName().Version"></script>

<style>
    .banner {
        height: 100%;
        background: url('../../Content/img/background/password-reset-OG.jpg') center center no-repeat;
        background-size: cover;
    }
</style>
