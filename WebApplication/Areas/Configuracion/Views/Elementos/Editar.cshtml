@{
    ViewData["Title"] = "Editar elemento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BusinessEntity.ParametrosBusinessEntity

<div class="content-wrapper">
    <div class="content">

        <input type="hidden" id="hiddenlistarElemento" value="@Url.Action("Listar", "Elementos", new { Area = "Configuracion" })" />
        @Html.Partial("_Mensaje")

        <div class="row">
            <div class="col-11">
                <!-- Advanced legend -->
                <div class="card">
                    <div class="card-header header-elements-inline">
                        <h5 class="card-title"><i class="icon-pencil7 mr-2"></i>@ViewData["Title"]</h5>
                    </div>

                    <div class="card-body">
                        <form id="form_editar_elemento" class="form-validate" method="post" action="Editar" autocomplete="off">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.Param_id)
                            @Html.HiddenFor(m => m.Param_tip_ele)
                            @Html.HiddenFor(m => m.Param_ele_nom)

                            @Html.Partial($"PartialViewEditar")

                            <div class="text-right">
                                @*<a type="button" class="btn btn-light mr-3" href="@Url.Action("Listar", "Elementos", new {Area = "Configuracion", id_tipo_elemento = @Model.Param_tip_ele})"><i class="icon-previous2 mr-2"></i> Volver</a>*@
                                <button type="button" class="btn btn-light mr-3" onclick="fnc_volver_elementos();"><i class="icon-previous2 mr-2"></i> Volver</i></button>
                                <button type="button" class="btn btn-primary" style="background-color: #064A98" onclick="fnc_validar_formulario();">Guardar <i class="icon-floppy-disk ml-1"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /advanced legend -->

            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/Content/global_assets/js/plugins/ui/moment/moment.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/pickers/daterangepicker.js"></script>
    <script src="~/Content/global_assets/js/plugins/forms/styling/uniform.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/forms/validation/validate.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/forms/styling/switch.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/forms/selects/select2.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/notifications/sweet_alert.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/tables/datatables/extensions/buttons.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/tables/datatables/extensions/fixed_header.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/tables/datatables/extensions/responsive.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/notifications/bootbox.min.js"></script>
    <script src="~/Content/global_assets/js/pages/configuracion/elementos/editar.js?v=@ViewContext.Controller.GetType().Assembly.GetName().Version"></script>
}
