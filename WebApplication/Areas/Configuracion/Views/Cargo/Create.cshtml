
@{
    ViewBag.Title = "Crear Cargo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BusinessEntity.CargoBusinessEntity.Cargo

<div class="content-wrapper">
    <div class="content">

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header header-elements-inline">
                        <h5 class="card-title">@ViewData["Title"]</h5>
                    </div>
                    <div class="card-body">
                        @Html.Partial("_Mensaje")


                        <form class="form-validate" method="post" action="Create">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.car_cod)
                            @Html.HiddenFor(m => m.menus)

                            <input type="hidden" id="listar_menu" value="@Url.Action("menu","Cargo", null)" />
                            <input type="hidden" id="hddn_Valid_Cargo" value="@Url.Action("JSON_ValidExists", "Cargo",new {Area ="Configuracion" } )" />

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Nombre Cargo</label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.car_nom, new { @class = "form-control form-control-sm text-uppercase", @placeholder = "Nombre...", @autocomplete = "off", @required = "required", @maxlength = "50" })
                                    <input type="text" id="nro_menus" name="nro_menus" value="0" style="display: none;" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Descripción Cargo</label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.car_des, new { @class = "form-control form-control-sm text-uppercase", @placeholder = "Descripción...", @autocomplete = "off", @maxlength = "200" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Editable</label>
                                <div class="col-lg-3">
                                    <div class="form-check form-check-switch form-check-switch-left">
                                        @Html.CheckBoxFor(m => m.car_mod, new { @class = "form-check-input-switch" })
                                    </div>
                                </div>

                                <label class="col-lg-1 col-form-label">Eliminar</label>
                                <div class="col-lg-5">
                                    <div class="form-check form-check-switch form-check-switch-left">
                                        @Html.CheckBoxFor(m => m.car_del, new { @class = "form-check-input-switch" })
                                    </div>
                                </div>

                            </div>

                            <div class="text-right">
                                <a href="@Url.Action("Index", "Cargo", null)" class="btn btn-light mr-3"><i class="icon-backward2 mr-2"></i>Volver</a>
                                <button type="submit" class="btn btn-primary">Guardar <i class="icon-floppy-disk ml-1"></i></button>
                            </div>

                            <ul class="nav nav-tabs nav-tabs-highlight">
                                <li class="nav-item"><a href="#opciones-menu-tab1" class="nav-link active" data-toggle="tab"><i class="icon-tree7 mr-1"></i>Perfiles</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane  fade show  active" id="opciones-menu-tab1">
                                    <div class="tree well border-left-blue border-left-lg">
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Content/global_assets/js/plugins/extensions/jquery_ui/core.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/forms/styling/uniform.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/forms/validation/validate.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/forms/styling/switch.min.js"></script>
    <script src="~/Content/global_assets/js/plugins/trees/fancytree_all.min.js"></script>
    <script src="~/Content/global_assets/js/pages/configuracion/cargo/agregar.js?v=@ViewContext.Controller.GetType().Assembly.GetName().Version"></script>
}